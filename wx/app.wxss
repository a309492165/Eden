/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
/* 分割块 */
.garyBox{
  background-color: rgba(211, 211, 211, 0.6);
  width: 100%;
  height:20rpx;
}
/* 单行超出范围截取添加省略号 */
.ell{
  overflow:hidden;/* 超出范围隐藏 */
  white-space:nowrap;
  text-overflow:ellipsis;
}
/* 商品列表主体/推荐主体/分类主体 */
.shop-container{
  padding: 20rpx 40rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.shop-container>view{
  width: 48%;
  height: 450rpx;
  margin-top:20rpx;
}
.shop-item image{
  width: 100%;
  height: 300rpx;
}
.shop-item-desc{
  display: flex;
  padding: 10rpx;
  flex-wrap:wrap;
  flex-direction: column;
  justify-content: space-between;
  height: 120rpx;
}
.shop-item-desc text{
  width: 100%;
  font-size:14px;
  letter-spacing: .1em;
}
.shop-item-desc .shop-item-buy{
  width: 100%;
  height: 50rpx;
  font-size:14px;
  display: flex;
  justify-content: space-between;
}
.shop-item-buy view{
  color:#f40;
}
.shop-item-buy text{
  font-size:12px;
}
.shop-item-buy button{
  padding:0 10rpx;
  font-size:10px;
  border:1px solid #f40;
  color:#f40;
  margin:0;
  height:40rpx;
  line-height: 36rpx;
  background-color: transparent;
  margin-top:2rpx;
}