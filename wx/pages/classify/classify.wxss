/* pages/classify/classify.wxss */
page{
  height:100%;
}
/* 主体样式 */
.content{
  position:relative;
  width: 100%;
  height:100%;
  text-align: center;
  font-size:16px;
  color:#bfbfbf;
}
/* 左边栏样式 */
.content-left{
  width: 26%;
  height:100%;
  position: absolute;
  top:0;
  left:0;

}
.content-left-item{
  height:80rpx;
  line-height:80rpx;
  color:#666;
  background-color:rgba(211, 211, 211, 0.3);
  border-bottom:1rpx solid rgba(211, 211, 211, 0.5);
}
.content-left-item.active{
  background-color:#fff;
  color:#f0145a;
}
/* 右边栏样式 */
.content-right{
  position: absolute;
  top:0;
  left:26%;
  width: 74%;
}
.content-right>view{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
}
.content-right-item{
  width:33.3333%;
  display: flex;
  flex-direction:column;
}
.content-right-item image{
  margin:30rpx auto 10rpx;
  width: 80rpx;
  height:80rpx;
  border-radius:50%;
}
.content-right .nodata_text{
  color: black;
  display: block;
  text-align: center;
  font-size:14px; 
  padding: 20rpx 0;   
} 