/* pages/classifyDetail/classifyDetail.wxss */
page{
  width:100%;
  height:100%;
}
/* 主体 */
.content{
  width: 100%;
  height:100%;
}
.content .shop-container{
  margin-top:80rpx;
}
/* 分类导航 */
.classify-nav{
  display: flex;
  font-size:14px;
  color:#bfbfbf;
  border-bottom:1rpx solid #bfbfbf;
  position:fixed;
  top:0;left:0;right:0;
  z-index: 999;
  background: #fff;
  height:80rpx;
}
.classify-nav>view{
  width:25%;
  text-align: center;
  border-right:1rpx solid #bfbfbf;
  margin:20rpx 0;
  position: relative;
}
.classify-nav .navActive{
  color:#D81E06;
}
.classify-nav .sub{
  position: absolute;
  top:10rpx;
  right:18%;
  width: 10rpx;
  height:10rpx;
  border-bottom:1rpx solid #bfbfbf;
  border-right:1rpx solid #bfbfbf;
  transform: rotate(45deg);
}
.classify-nav .subActive{
  border-color:#D81E06;
}
.classify-nav>view:last-child{
  border:none;
}
/* 模态层 */
.mask-layer {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 9;
  color: #fff;
}
/* 选择弹窗 */
.pop-common{
  width:100%;
  height:520rpx;
  background: #fff;
  position: fixed;
  top:78rpx;
  z-index: 99;
}
.pop-common-top{
  height: 420rpx;
  padding-left:20rpx;
  font-size: 12px;
}
.pop-common-top>view{
  padding:20rpx 0;
  border-bottom:1rpx solid #bfbfbf;
  position: relative;
}
.pop-common-top icon{
  position:absolute;
  top:16rpx;
  right:30rpx;
  color: #D81E06;
}
.pop-common-bottom{
  display: flex;
}
.pop-common-bottom>button{
  background: #D81E06;
  width: 43%;
  font-size:16px;
}