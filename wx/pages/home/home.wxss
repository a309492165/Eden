/* addr */
.addr{
  padding: 20rpx;
  font-size:14px;
}
/* swiper */
.swiperF{
  width: 100%;
  height:300rpx;
}
.swiperF swiper,.swiperF swiper image{
  width: 100%;
  height:100%;
}
/* container */
.shop-container{
  padding: 20rpx 40rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.shop-container>view{
  width: 48%;
  height: 450rpx;
  margin-top:20rpx;
}
.shop-item image{
  width: 100%;
  height: 300rpx;
}
.shop-item-desc{
  display: flex;
  padding: 10rpx;
  flex-wrap:wrap;
  flex-direction: column;
  justify-content: space-between;
  height: 120rpx;
}
.shop-item-desc text{
  width: 100%;
  font-size:14px;
  letter-spacing: .1em;
}
.shop-item-desc .shop-item-buy{
  width: 100%;
  height: 50rpx;
  font-size:14px;
  display: flex;
  justify-content: space-between;
}
.shop-item-buy view{
  color:#f40;
}
.shop-item-buy text{
  font-size:12px;
}
.shop-item-buy button{
  padding:0 10rpx;
  font-size:10px;
  border:1px solid #f40;
  color:#f40;
  margin:0;
  height:40rpx;
  line-height: 36rpx;
  background-color: transparent;
  margin-top:2rpx;
}